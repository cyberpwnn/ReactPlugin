			<version>4.12</version>
		</dependency>
		<dependency>
			<groupId>htmlunit</groupId>
			<artifactId>unit</artifactId>
			<scope>system</scope>
			<systemPath>${react.libs}/HTMLUnit-2.15-OSGI.jar</systemPath>
			<version>1.8.8</version>
		</dependency>
		<dependency>
			<groupId>org.jsoup</groupId>
