<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.cyberpwn.react</groupId>
	<artifactId>React</artifactId>
	<version>4.7.61</version>
	<name>React</name>
	<description>Smart Server Performance</description>
	<properties>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		<react.libs>${project.basedir}/lib</react.libs>
		<ct.libs>${project.basedir}/lib</ct.libs>
		<react.proguard>${project.basedir}/proguard</react.proguard>
		<react.production.folder>${project.basedir}\release</react.production.folder>
		<react.development.folder>C:\Users\cyberpwn\Documents\development\servers\dynamic\plugins</react.development.folder>
	</properties>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/*.yml</include>
					<include>**/*.txt</include>
				</includes>
			</resource>
		</resources>
	</build>
	<profiles>
		<profile>
			<id>development</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-jar-plugin</artifactId>
						<version>2.3.1</version>
						<configuration>
							<outputDirectory>${react.development.folder}</outputDirectory>
							<finalName>React</finalName>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>production</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-jar-plugin</artifactId>
						<version>2.3.1</version>
						<configuration>
							<outputDirectory>${react.production.folder}</outputDirectory>
							<finalName>React-${project.version}</finalName>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	<dependencies>
		<dependency>
			<groupId>spigot.org</groupId>
			<artifactId>spigot-1.9.4</artifactId>
			<scope>system</scope>
			<systemPath>${react.libs}/Spigot-1.9.4.jar</systemPath>
			<version>1.9.4</version>
		</dependency>
		<dependency>
			<groupId>paper</groupId>
			<artifactId>paper-1.8.8</artifactId>
			<scope>system</scope>
