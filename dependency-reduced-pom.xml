<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.cyberpwn.react</groupId>
  <artifactId>React</artifactId>
  <name>React</name>
  <version>4.1.9</version>
  <description>Smart Server Performance</description>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <includes>
          <include>**/*.yml</include>
          <include>**/*.txt</include>
        </includes>
      </resource>
    </resources>
  </build>
  <profiles>
    <profile>
      <id>development</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-jar-plugin</artifactId>
            <version>2.3.1</version>
            <executions>
              <execution>
                <id>default-jar</id>
                <phase>package</phase>
                <goals>
                  <goal>jar</goal>
                </goals>
                <configuration>
                  <outputDirectory>C:\Users\cyberpwn\Documents\development\servers\dynamic\plugins</outputDirectory>
                  <finalName>React</finalName>
                </configuration>
              </execution>
            </executions>
            <configuration>
              <outputDirectory>C:\Users\cyberpwn\Documents\development\servers\dynamic\plugins</outputDirectory>
              <finalName>React</finalName>
            </configuration>
          </plugin>
          <plugin>
            <artifactId>maven-shade-plugin</artifactId>
            <version>3.0.0</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
                <configuration>
                  <artifactSet>
                    <includes>
                      <include>com.goebl:david-webb</include>
                    </includes>
                  </artifactSet>
                </configuration>
              </execution>
            </executions>
            <configuration>
              <artifactSet>
                <includes>
                  <include>com.goebl:david-webb</include>
                </includes>
              </artifactSet>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>production</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-jar-plugin</artifactId>
            <version>2.3.1</version>
            <configuration>
              <outputDirectory>${react.production.folder}</outputDirectory>
              <finalName>React-${project.version}</finalName>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>spigot.org</groupId>
      <artifactId>spigot-1.8.8</artifactId>
      <version>1.8.8</version>
      <scope>system</scope>
      <systemPath>${react.libs}/Spigot-1.8.8.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>paper</groupId>
      <artifactId>paper-1.8.8</artifactId>
      <version>1.8.8</version>
      <scope>system</scope>
      <systemPath>${react.libs}/Paper-1.8.8.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>placeholderapi</groupId>
      <artifactId>placeholderapi</artifactId>
      <version>1.8.8</version>
      <scope>system</scope>
      <systemPath>${react.libs}/PlaceHolderAPI.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>fawe</groupId>
      <artifactId>fawe</artifactId>
      <version>1.8.8</version>
      <scope>system</scope>
      <systemPath>${react.libs}/fawe-api.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>we</groupId>
      <artifactId>we</artifactId>
      <version>1.8.8</version>
      <scope>system</scope>
      <systemPath>${react.libs}/worldedit-1.0.jar</systemPath>
    </dependency>
  </dependencies>
  <properties>
    <react.proguard>${project.basedir}/proguard</react.proguard>
    <react.development.folder>C:\Users\cyberpwn\Documents\development\servers\dynamic\plugins</react.development.folder>
    <react.production.folder>C:\Users\cyberpwn\Documents\development\release\react</react.production.folder>
    <react.libs>${project.basedir}/lib</react.libs>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
  </properties>
</project>

